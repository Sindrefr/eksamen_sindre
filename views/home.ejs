<%- include('partials/navbar') %>
<h1>Welcome, <%= username %>!</h1>

<h2>Add Quote</h2>
<form class="addform" action="/addquote" method="post">
  <input type="text" name="quote" placeholder="Enter quote text" maxlength="100" required>
  <button type="submit">Add Quote</button>
</form>
<br>

<a href="../veileder"><h3>Trenger du hjelp med? trykk her</h3></a>

<h2>Your Quotes</h2>
<ul class="quote-list">
  <% quotes.forEach(quote => { %>
    <li class="quote-item">
      <span class="quote-author">
        <%= quote.author %> -
      </span>
      <span class="quote-content">
        <%= quote.content %>
      </span>
      <form class="edit-form" action="/updatequote/<%= quote._id %>" method="post">
        <input type="text" name="updatedQuote" value="<%= quote.content %>" maxlength="100" required>
        <button type="submit">Update</button>
      </form>
    </li>
  <% }); %>
</ul>
