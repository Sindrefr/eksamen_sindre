<%- include('partials/navbar') %>
<h1>Welcome, <%= username %>!</h1>

<h2>Add Quote</h2>
<form class="addform" action="/addquote" method="post">
  <input type="text" name="quote" placeholder="Enter quote text" maxlength="100" required>
  <button type="submit">Add Quote</button>
</form>
<br>

<h2>Your Quotes</h2>
<ul class="quote-list">
  <% quotes.forEach(quote => { %>
    <li class="quote-item">
      <span class="quote-author">
        <%= quote.author %> -
      </span>
      <span class="quote-content">
        <%= quote.content %>
      </span>
      <form class="update-form" action="/updatequote/<%= quote._id %>" method="post">
        <input type="text" name="updatedQuote" placeholder="Enter updated quote" maxlength="100" required>
        <button type="submit">Update</button>
      </form>
      <form class="delete-form" action="/deletequote/<%= quote._id %>" method="post">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% }); %>
</ul>
